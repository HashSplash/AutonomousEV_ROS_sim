<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="erickshaw">

    <xacro:include filename="include_file.xacro"/>
    <xacro:include filename="erickshaw_gazebo.xacro"/>
    <xacro:include filename="camera_gazebo.xacro"/>

    <xacro:property name="PI" value="3.14159265359" />
    <xacro:property name="effort" value="30" />
    <xacro:property name="velocity" value="1.9" />
    <xacro:property name="l" value="2.4" />


    <!-- Color -->
    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1" />
    </material>


    <!-- base and chassis -->

    <link name="base_link"/>

    <link name="chassis_link">
        <visual>
            <material name="blue" />
            <origin rpy="${PI/2} 0 0" xyz="-2.925 0 0.3" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/rikchasiss.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-2.2 0 1.75" />
            <geometry>
                <!-- <mesh filename="package://erickshaw_description/mesh/erickshaw/rikchasiss.stl" scale="0.05 0.05 0.05" /> -->
                <box size="6 2.3 3.6"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="200" x="4.14" y="2.20" z="3.238">
            <origin xyz="-2.225 0 1.2" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis_link" />
        <origin xyz="2.9 0 0.75" rpy="0 0 0" />
    </joint>

    <!-- chassis and right wheel -->
    <link name="right_wheel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/ewheel.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                <!-- <mesh filename="package://erickshaw_description/mesh/erickshaw/ewheel.stl" scale="0.05 0.05 0.05" /> -->
                <cylinder radius="0.75" length="0.35" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="3.4" length="0.197" radius="0.497">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis_link" />
        <child link="right_wheel_link" />
        <origin xyz="0 1.4 0" rpy="0 0 0" />
        <axis xyz="0 -1 0" />
    </joint>



    <!-- chassis and left wheel -->
    <link name="left_wheel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/ewheel.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                <!-- <mesh filename="package://erickshaw_description/mesh/erickshaw/ewheel.stl" scale="0.05 0.05 0.05" /> -->
                <cylinder radius="0.75" length="0.35" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="3.4" length="0.197" radius="0.497">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis_link" />
        <child link="left_wheel_link" />
        <origin xyz="0 -1.4 0" rpy="0 0 0" />
        <axis xyz="0 -1 0" />
        <mimic joint="right_wheel_joint" multiplier="1" offset="0" />
    </joint>



    <!-- roof and chassis -->
    <link name="roof_link">
        <visual>
            <origin xyz="0 0 0" rpy="${PI/2} 0 0"/>
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/roof.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <!-- <mesh filename="package://erickshaw_description/mesh/erickshaw/roof.stl" scale="0.05 0.05 0.05" /> -->
                <box size="6.7 2.3 0.3" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="27" x="4.77" y="2.33" z="6">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <joint name="roof_joint" type="fixed">
        <parent link="chassis_link" />
        <child link="roof_link" />
        <origin rpy="0 0 0" xyz="-2.925 0 3.7" />
    </joint>



    <!-- handle_link and chassis -->
    <link name="handle_link">
        <visual>
            <origin xyz="0 0 0" rpy="${PI/2} 0 0"></origin>
            <material name="grey" />
            <geometry>
                <cylinder radius="0.07" length="1.656"></cylinder>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${PI/2} 0 0"></origin>
            <geometry>
                <cylinder radius="0.07" length="1.656"></cylinder>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2" radius="0.07" length="1.656">
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="handle_joint" type="revolute">
        <parent link="chassis_link" />
        <child link="handle_link" />
        <origin rpy="0 0 0" xyz="-5.58 0 1.85" />
        <axis xyz="0 0 -1" />
        <limit lower="-${PI/4 -0.1 }" upper="${PI/4 -0.1}" effort="${effort}" velocity="${velocity}" />
    </joint>


    <!-- holder_r_link and handle_joint -->
    <link name="holder_r_link">
        <visual>
            <material name="grey" />
            <origin rpy="0 0 0" xyz="0 0 -${l/2}" />
            <geometry>
                <cylinder radius="0.07" length="${l}"></cylinder>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 -${l/2}" />
            <geometry>
                <cylinder radius="0.07" length="${l}"></cylinder>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="3.5" radius="0.07" length="${l}">
            <origin xyz="0 0 -${l/2}" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="holder_r_joint" type="fixed">
        <parent link="handle_link" />
        <child link="holder_r_link" />
        <origin rpy="0 ${pi/6} 0" xyz="0 0.3 0" />

    </joint>
    <!-- holder_l_link and handle_link -->
    <link name="holder_l_link">
        <visual>
            <material name="grey" />
            <origin rpy="0 0 0" xyz="0 0 -${l/2}" />
            <geometry>
                <cylinder radius="0.07" length="${l}"></cylinder>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 -${l/2}" />
            <geometry>
                <cylinder radius="0.07" length="${l}"></cylinder>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="3.5" radius="0.07" length="${l}">
            <origin xyz="0 0 -${l/2}" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <joint name="holder_l_joint" type="fixed">
        <parent link="handle_link" />
        <child link="holder_l_link" />
        <origin rpy="0 ${pi/6} 0" xyz="0 -0.3 0" />
    </joint>

    <!-- front_wheel_link and handle_link -->
    <link name="front_wheel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/ewheel.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin rpy="${pi/2} 0 0" xyz="0 0 0" />
            <geometry>
                <!-- <mesh filename="package://erickshaw_description/mesh/erickshaw/ewheel.stl" scale="0.05 0.05 0.05" /> -->
                <cylinder radius="0.75" length="0.35" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="3.4" length="0.197" radius="0.497">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="front_wheel_joint" type="continuous">
        <parent link="handle_link" />
        <child link="front_wheel_link" />
        <origin rpy="0 0 0" xyz="-1.1 0 -1.85" />
        <axis xyz="0 -1 0" />
    </joint>


    <!-- chassis_link and battery_bb  -->
    <link name="battery_bb_link">
        <visual>
            <origin xyz="0 0 -0.25" rpy="${PI/2} 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/battery.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 -0.25" rpy="${PI/2} 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/battery.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="45" x="0.5" y="1.2" z="0.5">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <joint name="battery_bb_joint" type="fixed">
        <parent link="chassis_link" />
        <child link="battery_bb_link" />
        <origin rpy="0 0 0" xyz="0.1 0 0.6" />
    </joint>

    <!-- chassis_link and battery_bf  -->
    <link name="battery_bf_link">
        <visual>
            <origin xyz="0 0 -0.25" rpy="${PI/2} 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/battery.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 -0.25" rpy="${PI/2} 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/battery.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="45" x="0.5" y="1.2" z="0.5">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <joint name="battery_bf_joint" type="fixed">
        <parent link="chassis_link" />
        <child link="battery_bf_link" />
        <origin rpy="0 0 0" xyz="-0.45 0 0.6" />
    </joint>


    <!-- chassis_link and battery_fl  -->
    <link name="battery_fl_link">
        <visual>
            <origin xyz="0 0 -0.25" rpy="${PI/2} 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/battery.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 -0.25" rpy="${PI/2} 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/battery.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="45" x="0.5" y="1.2" z="0.5">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <joint name="battery_fl_joint" type="fixed">
        <parent link="chassis_link" />
        <child link="battery_fl_link" />
        <origin rpy="0 0 0" xyz="-2.4 -0.45 0.6" />
    </joint>

    <!-- chassis_link and battery_fr  -->
    <link name="battery_fr_link">
        <visual>
            <origin xyz="0 0 -0.25" rpy="${PI/2} 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/battery.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 -0.25" rpy="${PI/2} 0 0" />
            <geometry>
                <mesh filename="package://erickshaw_description/mesh/erickshaw/battery.stl" scale="0.05 0.05 0.05" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="45" x="0.5" y="1.2" z="0.5">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <joint name="battery_fr_joint" type="fixed">
        <parent link="chassis_link" />
        <child link="battery_fr_link" />
        <origin rpy="0 0 0" xyz="-2.4 0.45 0.6" />
    </joint>

