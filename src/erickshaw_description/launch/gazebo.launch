<launch>
    <arg name="paused" default="false" />
    <arg name="use_sim_time" default="true" />
    <arg name="gui" default="true" />
    <arg name="debug" default="false" />
    <arg name="model" default="$(find erickshaw_description)/urdf/erickshaw.urdf.xacro" />



    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />

    <include file= "$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="$(arg paused)" />
        <arg name="use_sim_time" value="$(arg use_sim_time)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="headless" value="false"/>
        <arg name="debug" value="$(arg debug)" />
        <arg name="world_name" value="$(find erickshaw_description)/worlds/main.world" />
        <!--arg name="world_name" value="empty_world" /-->
    </include>

    <node pkg="gazebo_ros" type="spawn_model" name="urdf_spawner" respawn="false" output="screen" 
        args="-unpause -urdf -model robot -param robot_description"/>
</launch>

